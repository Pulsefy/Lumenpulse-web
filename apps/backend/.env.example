# ============================================
# LumenPulse Backend API Configuration
# ============================================

# Application
PORT=8000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=lumenpulse
DB_SCHEMA=public

# ============================================
# RATE LIMITING CONFIGURATION (NEW)
# ============================================
# Default: 100 requests per minute per IP
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TTL=60000

# For testing (as per requirements):
# RATE_LIMIT_MAX_REQUESTS=3
# RATE_LIMIT_TTL=60000

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# ============================================
# Stellar Blockchain Configuration
# ============================================
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
STELLAR_SECRET_KEY=your_stellar_secret_key_here

# ============================================
# External API Keys
# ============================================
NEWS_API_KEY=your_newsapi_org_key
COINGECKO_API_KEY=your_coingecko_api_key
CRYPTO_COMPARE_API_KEY=your_cryptocompare_api_key

# ============================================
# Redis (Optional - for distributed rate limiting)
# ============================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_FILE=logs/combined.log
ERROR_LOG_FILE=logs/error.log

# ============================================
# Email/SMTP (for notifications)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password